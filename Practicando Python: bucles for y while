        "libros = [\n",
        "    {\"nombre\": \"1984\", \"stock\": 5},\n",
        "    {\"nombre\": \"Dom Casmurro\", \"stock\": 0},\n",
        "    {\"nombre\": \"El Principito\", \"stock\": 3},\n",
        "    {\"nombre\": \"El Hobbit\", \"stock\": 0},\n",
        "    {\"nombre\": \"Orgullo y Prejuicio\", \"stock\": 2}\n",
        "]\n",
        "\n",
        "print(\"--- üõí Libros Disponibles en Stock ---\")\n",
        "\n",
        "# 1. Recorremos la lista de diccionarios (cada diccionario es un libro)\n",
        "for libro in libros:\n",
        "\n",
        "    # 2. Verificamos la condici√≥n de exclusi√≥n (stock agotado)\n",
        "    if libro[\"stock\"] == 0:\n",
        "        # Si el stock es 0, usamos 'continue' para saltar al siguiente libro\n",
        "        print(f\"üö´ Libro agotado, omitiendo: {libro['nombre']}\")\n",
        "        continue # El bucle salta inmediatamente a la siguiente iteraci√≥n\n",
        "\n",
        "    # 3. Si llegamos aqu√≠, el stock es > 0, por lo que mostramos el libro\n",
        "    print(f\"‚úÖ Libro disponible: {libro['nombre']}\")\n",
        "\n",
        "print(\"\\nFiltrado de inventario completado.\")"
      ],
      "metadata": {
